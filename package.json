{
  "name": "reysilvagen-desktop",
  "version": "2.0.7",
  "description": "Modern Test Card Generator & Address Fetcher with Admin Panel - Built with Electron",
  "main": "src/main/main.js",
  "productName": "reysilvaGen",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "rimraf dist",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64",
    "build:installer": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --config.win.target=nsis",
    "build:portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --config.win.target=portable",
    "build:all": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --mac --linux",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --mac --linux --publish always"
  },
  "keywords": [
    "card-generator",
    "testing",
    "qa",
    "electron"
  ],
  "author": "Reysilva",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "rimraf": "^5.0.10"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-updater": "^6.1.7",
    "smart-buffer": "^4.2.0",
    "puppeteer": "^24.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reysilvaa/reysilvaGen.git"
  },
  "build": {
    "appId": "com.reysilvaa.reysilvagen",
    "productName": "reysilvaGen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "compression": "maximum",
    "asar": true,
    "electronDownload": {
      "cache": "./cache"
    },
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Reysilva",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "sign": null,
      "signingHashAlgorithms": null,
      "verifyUpdateCodeSignature": false,
      "signDlls": false,
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "reysilvaGen",
      "menuCategory": true,
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeader": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "displayLanguageSelector": false,
      "include": "build/windows-installer.nsh",
      "warningsAsErrors": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/macos-entitlements.plist",
      "entitlementsInherit": "build/macos-entitlements-inherit.plist",
      "type": "distribution",
      "extendInfo": {
        "LSApplicationCategoryType": "public.app-category.developer-tools",
        "CFBundleDisplayName": "reysilvaGen",
        "CFBundleName": "reysilvaGen",
        "CFBundleIdentifier": "com.reysilvaa.reysilvagen",
        "NSHumanReadableCopyright": "Copyright Â© 2025 Reysilva",
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "synopsis": "Modern Test Card Generator & Address Fetcher",
      "description": "ReysilvaGen is a modern Electron-based application for generating test credit cards and fetching addresses with an admin panel for BIN management.",
      "vendor": "Reysilva",
      "maintainer": "Reysilva <reysilva@example.com>",
      "desktop": {
        "Name": "reysilvaGen",
        "GenericName": "Card Generator",
        "Comment": "Modern Test Card Generator & Address Fetcher",
        "Categories": "Development;Utility;",
        "Keywords": "card;generator;test;development;",
        "StartupWMClass": "reysilvaGen",
        "Terminal": false,
        "Type": "Application"
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "priority": "optional",
      "afterInstall": "build/linux-post-install.sh"
    },
    "rpm": {
      "depends": [
        "libXScrnSaver",
        "libnotify",
        "libappindicator"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "afterInstall": "build/linux-post-install.sh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "reysilvaa",
        "repo": "reysilvaGen",
        "releaseType": "release"
      }
    ]
  }
}
