{
  "name": "reysilvagen-desktop",
  "version": "2.0.1",
  "description": "Modern Test Card Generator & Address Fetcher with Admin Panel - Built with Electron",
  "main": "src/main/main.js",
  "productName": "reysilvaGen",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "rimraf dist",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64",
    "build:installer": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --config.win.target=nsis",
    "build:portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --config.win.target=portable",
    "build:all": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --publish always"
  },
  "keywords": [
    "card-generator",
    "testing",
    "qa",
    "electron"
  ],
  "author": "Reysilva",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.10"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-updater": "^6.1.7",
    "smart-buffer": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reysilva/reysilvaGen.git"
  },
  "build": {
    "appId": "com.reysilva.reysilvagen",
    "productName": "reysilvaGen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "compression": "maximum",
    "asar": true,
    "electronDownload": {
      "cache": "./cache"
    },
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Reysilva",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "sign": null,
      "signingHashAlgorithms": null,
      "verifyUpdateCodeSignature": false,
      "signDlls": false,
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "reysilvaGen",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "include": null,
      "warningsAsErrors": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "reysilva",
        "repo": "reysilvaGen",
        "releaseType": "release"
      }
    ]
  }
}
